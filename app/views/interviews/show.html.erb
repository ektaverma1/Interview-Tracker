<%- model_class = Interview -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:candidate_name) %>:</strong></dt>
  <dd><%= @interview.candidate_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_exp) %>:</strong></dt>
  <dd><%= @interview.total_exp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inteviewer_name) %>:</strong></dt>
  <dd><%= @interview.inteviewer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interview_date) %>:</strong></dt>
  <dd><%= @interview.interview_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interview_status) %>:</strong></dt>
  <dd><%= @interview.interview_status %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              interviews_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_interview_path(@interview), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              interview_path(@interview),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
